<Window x:Class="Bibliothek.Author_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliothek"
        mc:Ignorable="d"
        Title="Author_Add" Height="250" Width="320" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFECEAEA">
        <Label Style="{DynamicResource addlabels}" Content="Nachname" HorizontalAlignment="Left" Margin="24,94,0,0" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource addlabels}" Content="Vorname" HorizontalAlignment="Left" Margin="24,41,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="box_vorname" HorizontalAlignment="Left" Height="20" Margin="154,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>
        <Button x:Name="button_add_author" Style="{DynamicResource addbuttons}" Content="Hinzufügen" HorizontalAlignment="Center" Height="36" Margin="0,151,0,0" VerticalAlignment="Top" Width="132" Click="Button_Click"/>
        <TextBox x:Name="box_nachname" HorizontalAlignment="Left" Height="20" Margin="154,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"/>

    </Grid>
</Window>
